{% extends 'base.html.twig' %}

{% block title %}{{ 'pages.titles.list_training_camp' | trans }}{% endblock %}

{% block body %}

    <div class="container mt-5"><!-- Container -->

        <div class="row">
            <div class="col-md-4 mb-5">
                {% include 'admin/_partials/_admin_navbar.html.twig' %}
            </div>

            <div class="col-md-8 mb-5">


                <div class="card bg-custom-dark">
                    <div class="card-header">{{ 'list_training_camp.header' | trans }} ({{ camps.getTotalItemCount }}) <a href="{{ path('admin_dashboard') }}" style="font-size: x-small !important;" class="btn btn-sm btn-outline-secondary float-right">{{ 'template.admin.dashboard' | trans }}</a></div>
                    <div class="card-body">
                        <div class="row mb-4 d-flex justify-content-center">
                            <a href="{{ path('new_training_camp') }}" class="btn btn-sm btn-secondary ml-2">{{ 'list_training_camp.button.new' | trans }}</a>
                        </div>
                        <div class="row">
                            <table class="table table-borderless text-center text-white table-responsive">
                                <thead class="text-white-50">
                                <tr>
                                    <td>{{ 'list_training_camp.table.header.training_camp' | trans }}</td>
                                    <td>{{ 'list_training_camp.table.header.improves' | trans }}</td>
                                    <td>{{ 'list_training_camp.table.header.duration' | trans }}</td>
                                    <td>{{ 'list_training_camp.table.header.price' | trans }}</td>
                                    <td>{{ 'list_training_camp.table.header.gives_badge' | trans }}</td>
                                    <td>{{ 'list_training_camp.table.header.actions' | trans }}</td>
                                </tr>
                                </thead>
                                <tbody>
                                {% for camp in camps %}
                                    <tr>
                                        <td>{{ camp.name }}</td>
                                        <td>{{ camp.attributeToImprove.name }} + {{ camp.skillPoints }}</td>
                                        <td>{{ camp.duration }}h</td>
                                        <td>${{ camp.price }}</td>
                                        <td>{% if camp.badge %} <span class="badge badge-warning">{{ camp.badge.name }}</span> {% else %}{{ 'list_training_camp.table.data.gives_badge_no' | trans }}{% endif %}</td>
                                        <td><a href="{{ url('delete_training_camp', {'id': camp.id}) }}" class="btn btn-sm btn-danger">{{ 'list_training_camp.button.remove' | trans }}</a></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="navigation col-md-4 offset-md-4 mt-4 d-flex justify-content-center">
                    {{ knp_pagination_render(camps) }}
                </div>
            </div>


        </div>
    </div><!-- Container -->


{% endblock %}
