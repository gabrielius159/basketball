<div class="row"><!-- Team info -->
    <div class="col-md-12">
        <div class="card text-white bg-custom-dark mb-3" style="width: 100%;">
            <div class="card-header pt-4 pb-4">Actions</div>
            {% if app.user.player %}
                {% if app.user.player.team == null %}
                    <div class="card-body d-flex justify-content-center">
                        <p class="card-text">
                            <a href="{{ path('team_sign', {'id': team.id}) }}" class="btn btn-warning">Join team</a>
                        </p>
                    </div>
                {% else %}
                    {% if app.user.player.team == team %}
                        <div class="card-body">
                            <p class="card-text d-flex justify-content-center">
                                <a href="{{ url('team_buyout') }}" class="btn btn-warning">Ask for a buyout</a>
                            </p>
                        </div>
                    {% endif %}
                {% endif %}
            {% endif %}
        </div>
    </div>
</div><!-- Team info -->
