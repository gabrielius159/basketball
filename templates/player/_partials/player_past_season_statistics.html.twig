<div class="row mt-3"><!-- Row 2 -->


    <div class="col-md-12"><!-- Column md-12 -->



        <div class="card bg-custom-dark">
            <div class="card-header pb-4 pt-4">Averages in each season</div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        {% if careerPlayerStats %}
                            <table class="table text-white-50 table-borderless">
                                <thead class="border-bottom">
                            <tr class="text-center">
                                <th>#</th>
                                <th>GP</th>
                                <th>PPG</th>
                                <th>RPG</th>
                                <th>APG</th>
                                <th>SPG</th>
                                <th>BPG</th>
                            </tr>
                                </thead>
                                <tbody>

                                {% for playerStat in careerPlayerStats %}
                                <tr class="text-center">
                                    <td>{{ playerStat.seasonId }}</td>
                                    <td>{{ playerStat.gamesPlayed }}</td>
                                    {% if playerStat.pointsAvg %}
                                        <td>{{ playerStat.pointsAvg|stats }}</td>
                                    {% else %}
                                        <td>0</td>
                                    {% endif %}
                                    {% if playerStat.reboundsAvg %}
                                        <td>{{ playerStat.reboundsAvg|stats }}</td>
                                    {% else %}
                                        <td>0</td>
                                    {% endif %}
                                    {% if playerStat.assistsAvg %}
                                        <td>{{ playerStat.assistsAvg|stats }}</td>
                                    {% else %}
                                        <td>0</td>
                                    {% endif %}
                                    {% if playerStat.stealsAvg %}
                                        <td>{{ playerStat.stealsAvg|stats }}</td>
                                    {% else %}
                                        <td>0</td>
                                    {% endif %}
                                    {% if playerStat.blocksAvg %}
                                        <td>{{ playerStat.blocksAvg|stats }}</td>
                                    {% else %}
                                        <td>0</td>
                                    {% endif %}
                                </tr>


                                {% endfor %}
                                </tbody>
                            </table>
                        {% else %}
                            <p>
                            This is player's first season.
                            </p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>




    </div><!-- Column md-12 -->



</div><!-- Row 2 -->
