<div class="row mt-3"><!-- Row 2 -->


    <div class="col-md-12"><!-- Column md-12 -->



        <div class="card bg-custom-dark">
            <div class="card-header pb-4 pt-4">Badges</div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        {% if player.playerBadges|length > 0 %}
                            <p>
                        {% for badge in player.playerBadges %}

                                <span class="badge badge-warning mr-2 mt-2">{{ badge.badge.name }}</span>

                        {% endfor %}

                        {% else %}

                            No badges
                            </p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>




    </div><!-- Column md-12 -->



</div><!-- Row 2 -->
