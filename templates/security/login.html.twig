{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <div class="container mt-5"><!-- Container -->

        <div class="row mb-4">

            <div class="col">

                <h1 class="text-white text-center" style="font-weight: 700;font-size: 5.2rem;line-height: 1.1;">Continue your <span class="yellowColor">journey</span></h1>

            </div>

        </div>

        <div class="row"><!-- Row -->



            <div class="col-md-6 offset-md-3"><!-- Form -->
                <div class="card text-white bg-custom-dark mb-3" style="width: 100%;">
                    <div class="card-header pt-4 pb-4">Login</div>
                    <div class="card-body">
                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            <label for="inputEmail">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-2" placeholder="Email" required autofocus>
                            <label for="inputPassword">Password</label>
                            <input type="password" name="password" id="inputPassword" class="form-control mb-2" placeholder="Password" required>

                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >


                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Remember me
                                </label>
                            </div>

                            <button class="btn btn-warning" type="submit">
                                Sign in
                            </button>
                        </form>
                    </div>
                </div>
            </div><!-- Form -->



        </div><!-- Row -->



    </div><!-- Container -->

{% endblock %}
